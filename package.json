{
  "name": "mixins-in-angular",
  "author": "diosvo",
  "version": "1.1.5",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:app": "ng build",
    "build:lib": "ng build mia-lib",
    "build:stats": "ng build --stats-json",
    "analyze": "webpack-bundle-analyzer dist/mixins-in-angular/stats.json",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.11",
    "@angular/cdk": "^12.2.11",
    "@angular/common": "~12.2.11",
    "@angular/compiler": "~12.2.11",
    "@angular/core": "~12.2.11",
    "@angular/forms": "~12.2.11",
    "@angular/material": "^12.2.11",
    "@angular/platform-browser": "~12.2.11",
    "@angular/platform-browser-dynamic": "~12.2.11",
    "@angular/router": "~12.2.11",
    "rxjs": "~7.4.0",
    "tslib": "^2.2.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.2.11",
    "@angular-eslint/builder": "12.6.0",
    "@angular-eslint/eslint-plugin": "12.6.0",
    "@angular-eslint/eslint-plugin-template": "12.6.0",
    "@angular-eslint/schematics": "12.6.0",
    "@angular-eslint/template-parser": "12.6.0",
    "@angular/cli": "^12.2.11",
    "@angular/compiler-cli": "~12.2.11",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "@typescript-eslint/eslint-plugin": "5.1.0",
    "@typescript-eslint/experimental-utils": "^5.1.0",
    "@typescript-eslint/parser": "5.1.0",
    "eslint": "^8.1.0",
    "gsap": "^3.7.1",
    "jest": "^27.3.1",
    "jest-preset-angular": "^10.0.1",
    "ng-packagr": "^12.2.5",
    "typescript": "^4.4.4",
    "webpack-bundle-analyzer": "^4.5.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/jest-config.ts"
    ],
    "moduleNameMapper": {
      "@lib(.*)": "<rootDir>/projects/mia-lib/src/lib/$1",
      "@env(.*)": "<rootDir>/src/environments/$1",
      "@auth(.*)": "<rootDir>/src/app/auth/$1",
      "@home(.*)": "<rootDir>/src/app/home/$1"
    },
    "moduleDirectories": [
      "node_modules",
      "src",
      "projects/mia-lib"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    }
  }
}
